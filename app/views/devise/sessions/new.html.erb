<article>
  <div class="signin">
    <div class="signin_text"><span>환영합니다!</span><br>로그인 해주시겠어요?</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder:"이메일을 입력하세요."%>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder:"비밀번호를 입력하세요."%>
      </div>

      <div class="actions">
        <%= f.submit "시작하기" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field_chbx">
          <%= f.check_box :remember_me, checked:"checked" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</article>