<article>
  <div class="signin">
      <div class="signin_text"><span>회원 가입</span><br>인생의 가장 멋진 순간을 시작하세요</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="signup_1">

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder:"ID ( 이메일 형식 )" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, placeholder:"비밀번호 ( 6글자 이상 )" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder:"비밀번호 확인"%>
          </div>

        </div>

        <div class="signup_2">

          <div class="field">
            <%= f.text_field :nickname,placeholder:"닉네임" %>
          </div>
          <div class="field">
            <%= f.text_field :phone , placeholder:"전화번호"%>
          </div>
          <div class="field">
            <%= f.label :성별 %>
            <%= f.radio_button :sex, "남자" %>
            <%= f.label :sex, "남자" %>
            <%= f.radio_button :sex, "여자" %>
            <%= f.label :sex, "여자" %>
          </div>
          <div class="field">
            <%= f.label :나이 %>
            <%= f.select(:age, ['10대후반', '20대초반', '20대후반', '30대초반', '30대후반', '40대이상'] , {}, { :class => ''}) %>
          </div>
          <div class="field">
            <%= f.label :프로필 %><br>
            <%= f.file_field :profile, accept: 'image/png image/gif image/jpg' %>
          </div>

          <div class="actions">
            <%= f.submit "회원가입" %>
            
          </div>
        </div>

      <% end %>
  </div>
</article>