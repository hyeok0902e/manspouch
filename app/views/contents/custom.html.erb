

<article class="index">
  <div class="i1">
    <div class="in1">트렌드</div>
    <div class="in2">지금 가장 뜨거운 트렌드를 보여드립니다.</div>
  </div>
  <div class="line"></div>
  <nav class="i2">
    <ul>
      <li><a href="/contents/filter/<%= 'hottest' %>">인기순</a></li>
      <li><a href="/contents/filter/<%= 'latest' %>">최신순</a></li>
    </ul>
  </nav>

  <section class="trend">
    <% @contents_normal.each do |content| %>
      <div class="content_all">
        <div class="ct_thumb">
          <div class="ct_title_cat"><%= content.category%></div>
          <%= link_to image_tag(content.thumb.main), content_path(content) %><!-- 썸네일 이미지 -->
          <div class="ct_title_likes"><div class="ico_heart_w"></div><%= link_to "#{content.get_upvotes.size}", like_content_path(content), method: :put %></div>
        </div>

        <div class="ct_title">
          <%= content.title %><!-- 타이틀이 노출됩니다. -->
        </div>

        <div class="ct_keyword">
          <p>
            <% tags = content.tags %>
            <% tags.each do |tag| %><!--키워드 전체가 노출됩니. -->
              <span>#<%= tag.name %></span>&nbsp
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </section>
    <%= link_to 'New Content', new_content_path %>
</article>
