<p id="notice"><%= notice %></p>

<p>
  <h3>Thumbnail</h3>
  <img src="<%= @creature.thumb.detail %>" alt="" />
</p>
<h3>Title: <%= @creature.title %></h3>
<p>Subtitle: <%= @creature.subtitle %></p>

<article class="" style="border: 1px solid #555">
  <h3>Body</h3>
  <p>
    <%= @creature.body.html_safe%>
  </p>
  <p>
    <%= link_to "Likes #{@creature.get_upvotes.size}", like_creature_path(@creature), method: :put %>
    <span>Views <%= @creature.impressionist_count %></span>
  </p>
</article>

<p>
  <h3>태그</h3>
  <% @tags.each do |tag| %>
    <span>#<%= tag.name %></span>&nbsp
  <% end %>
</p>

<%= link_to 'Edit', edit_creature_path(@creature) %> |
<%= link_to 'Destroy', @creature, method: :delete, data: { confirm: 'Are you sure?' } %>

<hr>

<div class="">
  <h3><%= @creature.talks.count %> Talks</h3>
  <%= render @creature.talks %>
  <h3>Add a Talk: </h3>
  <%= render "talks/form" %>
</div>
